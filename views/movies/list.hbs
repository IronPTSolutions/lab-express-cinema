<div class="container mb-2">
    <h2 class= "fw-bold">{{title}}</h2>
    <h5 >Click on the movie to check the showtimes!!</h5>
</div>


<div class="row">
{{#each movies as |movie|}}
  <div class="col-4">
    <div class="card my-3">
      <img src="{{movie.image}}" class="card-img-top">
      <div class="card-body text-center ">
        <h5 class="card-title ">{{movie.title}}</h5>
        
        <a href="/movies/{{movie.id}}" class="btn btn-sm btn-primary  ">See more</a>
        
      </div>
    </div>
  </div>
{{/each}}
</div>







      